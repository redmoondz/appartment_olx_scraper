# OLX Scraper Configuration

# Scraping Settings
BASE_URL=https://www.olx.ua
SEARCH_URL=https://www.olx.ua/uk/nedvizhimost/kvartiry/dolgosrochnaya-arenda-kvartir/dnepr/

# Rate Limiting (requests per minute)
MIN_REQUESTS_PER_MINUTE=10
MAX_REQUESTS_PER_MINUTE=60
DEFAULT_REQUESTS_PER_MINUTE=30

# Delays (seconds)
MIN_DELAY=1
MAX_DELAY=3

# Retry Settings
MAX_RETRIES=3
RETRY_DELAY=5

# Cache Settings
CACHE_DIR=cache
CACHE_FILE=apartments_cache.csv

# Logging Settings
LOG_DIR=logs
LOG_LEVEL=INFO
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Data Export
DATA_DIR=data
EXPORT_FORMAT=csv

# Concurrent Workers
MAX_WORKERS=5

# User Agent
USER_AGENT=Mozilla/5.0 (X11; Linux x86_64; rv:143.0) Gecko/20100101 Firefox/143.0
